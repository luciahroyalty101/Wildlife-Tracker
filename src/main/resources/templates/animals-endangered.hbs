

{{#partial "content"}}
    {{#if endangered}}
        <table class="table text-center">
            <h4 class="text-center"> Here are the endangered animals spotted by our rangers.</h4>
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Health</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody>
            {{#each endangered}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{health}}</td>
                    <td>{{age}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">There are no animals sighted yet..Report a sighting here</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}