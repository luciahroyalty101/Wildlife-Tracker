{{#partial "preContent"}}
    <div class="jumbotron ">
        <div class="container">
            <h1 class="display-3">Welcome to Sacred jungle !</h1>
            <p class="lead">The animal conservancy hub </p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    {{#if sighting}}
        <h4 class="text-center">Here's all the animal sightings so far</h4>
        <table class="table text-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Animal Seen</th>
                <th scope="col">Location</th>
                <th scope="col">Spotted On</th>
                <th scope="col">Ranger</th>
            </tr>
            </thead>
            <tbody>
            {{#each sighting}}
                <tr>
                    <td>{{animalName}}</td>
                    <td>{{location}}</td>
<!--                    <td>{{readableTimestamp}}</td>-->
                    <td><a href="/rangers/{{id}}details">{{rangerName}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center"> There are no animals sighted yet..Report a sighting here.</h5>
    {{/if}}
{{/partial}}

{{> layout.hbs}}